<div class="" style="padding: 20px">
    <div class="container-fluid" style="padding: 10px">
        <h2>Pending Books</h2><br>
    </div>
</div>

<div class="shop-page-wrapper" style="margin-top: -24px;">

    <!--=======  shop page header  =======-->





    <div class="shop-page-content mt-20 mb-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 order-1 order-lg-2 mb-md-80 mb-sm-80">

                    <div class="row product-isotope shop-product-wrap four-column">

                        <!--=======  single product  =======-->

                        <!--=======  single product  =======-->

                        {{#each newb}}
                            <div class="col-12 col-lg-3 col-md-6 col-sm-6 mb-45 new">
                                <!--    new{{this.book_title}}
                        -->    <div class="single-product">
                                <!--=======  single product image  =======-->

                                <div class="single-product__image" >

                            {{#ifCond  this.approve_status '1' }}
                                    <a class="image-wrap" href="" data-toggle="modal"
                                       data-target="#a{{this._id}}">
                                        <img style=" border:2px solid lightgrey;height: 290px;width: 250px" src="../../uploads/{{this.user_id}}/{{this.book_title}}/{{this.book_image}}" class="img-fluid" alt="">
                                   <!--     <img src="../../uploads/{{this.user_id}}/{{this.book_title}}/{{this.book_image}}" class="img-fluid" alt="">
                                  -->  </a>
                            {{else}}
                                    <a class="image-wrap" href="" data-toggle="modal"
                                       data-target="#a{{this._id}}">
                                        <img style=" border:2px solid lightcoral;height: 290px;width: 250px" src="../../uploads/{{this.user_id}}/{{this.book_title}}/{{this.book_image}}" class="img-fluid" alt="">
                                        <!--     <img src="../../uploads/{{this.user_id}}/{{this.book_title}}/{{this.book_image}}" class="img-fluid" alt="">
                                  -->  </a>

                                {{/ifCond}}
                                    <div class="single-product__floating-badges">
                                    </div>

                                    <div class="single-product__floating-icons">
                                        <span class=""><a href="#"  id={{this._id}} data-toggle="modal"
                                                                   data-target="#c{{this._id}}"
                                                                   data-tippy="View Book Details" data-tippy-inertia="true" data-tippy-animation="shift-away" data-tippy-delay="50" data-tippy-arrow="true" data-tippy-theme = "sharpborder" data-tippy-placement = "left" ><i class="fa fa-eye"></i></a></span>
                                        <span class=""><a href="#" id={{this._id}} data-toggle="modal"
                                                                    data-target="#a{{this._id}}" data-tippy="View Book" data-tippy-inertia="true" data-tippy-animation="shift-away" data-tippy-delay="50" data-tippy-arrow="true" data-tippy-theme = "sharpborder" data-tippy-placement = "left" ><i class="fa fa-book"></i></a></span>
                                        <!--    <span class="quickview"><a  class="cd-trigger" href="#qv-1" data-tippy="Quick View" data-tippy-inertia="true" data-tippy-animation="shift-away" data-tippy-delay="50" data-tippy-arrow="true" data-tippy-theme = "sharpborder" data-tippy-placement = "left"  ><i class="ion-ios-search-strong"></i></a></span>
                                      -->
                                        <span class=""><a href="#" id="{{this._id}}" class="bbd" data-tippy="Remove Book" data-tippy-inertia="true" data-tippy-animation="shift-away" data-tippy-delay="50" data-tippy-arrow="true" data-tippy-theme = "sharpborder" data-tippy-placement = "left" ><i class="fa fa-trash" style="color: red;"></i></a></span>

                                    </div>
                                </div>
                            </div>
                            </div>

                        {{/each}}

                    </div>
                </div>
            </div>
        </div>

        <!--=====  End of shop page content  ======-->
    </div>
    <!-- ./Tabs -->


</div>


{{#each  newb}}
    <div class=" modal  fade" id="a{{this._id}}" role="dialog">
        <div class="modal-dialog modal-lg ">

            <!-- Modal content-->
            <div class="modal-content ">
                <div class="modal-header">
                    <b><h4 class="modal-title" style="font-weight: 600">{{this.book_title}} </h4></b>

                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <!-- <input type="button" class="btn btn-default pull-right medetail" id="tchange{{this._id}}"
                           style="margin-right: 30px" value="Book Details">

               -->    </div>
                <div class="modal-body">
                    <div class="">
                        <center>
                            <embed src="../../uploads/{{this.user_id}}/{{this.book_title}}/{{this.book_file}}"
                                   style="border: 2px lightgrey solid" type="application/pdf" width="100%"
                                   height="600px">
                        </center>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/each}}



{{#each  newb}}


    <div class=" modal  fade" id="c{{this._id}}" role="dialog">
        <div class="modal-dialog modal-lg ">

            <!-- Modal content-->
            <div class="modal-content ">
                <div class="modal-header">
                    <b><h4 class="modal-title" style="font-weight: 600">{{this.book_title}} </h4></b>

                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <!-- <input type="button" class="btn btn-default pull-right medetail" id="tchange{{this._id}}"
                           style="margin-right: 30px" value="Book Details">

               -->    </div>
                <div class="modal-body">
                    <div class="details">
                        <center>
                            <h3>{{this.book_title}}Information</h3><br>
                            <table id="" class="table table-striped table-hover table-bordered"
                                   style="max-width: 70%">

                                <tr>

                                    <td class="text-center"><b>Status</b></td>

                                    {{#ifCond  this.approve_status '1' }}
                                        <td class="text-center">Pending</td>
                                    {{else}}
                                        <td class="text-center" style="color: red;">Not Approved</td>

                                    {{/ifCond}}
                                </tr>
                                <tr>

                                    <td class="text-center"><b>Book Title</b></td>

                                    <td class="text-center">{{this.book_title}}</td>
                                </tr>

                                <tr>

                                    <td class="text-center"><b>Book Author</b></td>

                                    <td class="text-center">{{this.author_id}}</td>
                                </tr>

                                <tr>

                                    <td class="text-center"><b>Book Category</b></td>

                                    <td class="text-center">{{this.category_id}}</td>
                                </tr>

                                <tr>

                                    <td class="text-center"><b>Book Publication</b></td>

                                    <td class="text-center">{{this.publication_id}}</td>
                                </tr>

                                <tr>

                                    <td class="text-center"><b>Book ISBN</b></td>

                                    <td class="text-center">{{this.ISBN}}</td>
                                </tr>


                                <tr>

                                    <td class="text-center"><b>Book Edition</b></td>

                                    <td class="text-center">{{this.edition}}</td>
                                </tr>

                                <tr>

                                    <td class="text-center"><b>Book Year</b></td>

                                    <td class="text-center">{{this.publish_year}}</td>
                                </tr>


                                <tr>

                                    <td class="text-center"><b>Email</b></td>

                                    <td class="text-center">{{this.email}}</td>
                                </tr>





                            </table>
                        </center>
                    </div>
                    <!-- <div class="">
                        <center>
                            <embed src="../../uploads/{{this.user_id}}/{{this.book_title}}/{{this.book_file}}"
                                   style="border: 2px lightgrey solid" type="application/pdf" width="100%"
                                   height="600px">
                        </center>
                    </div>-->
                </div>


            </div>

        </div>
    </div>
{{/each}}
